<?xml version="1.0" encoding="UTF-8"?>
<fields>
	<field>
		<title>用户姓名</title>
		<fieldName>userName</fieldName>
		<fieldType>String</fieldType>
		<length>30</length>
		<rules>
			<required>true</required>
		</rules>
	</field>
	<field>
		<title>账号</title>
		<fieldName>userCode</fieldName>
		<fieldType>String</fieldType>
		<length>30</length>
		<rules>
			<unique>true</unique>
			<required>true</required>
			<regex>
				<express>^[A-Za-z0-9]+$</express>
				<message>只能包含数字和26个英文字母组成的字符串</message>	
			</regex>
			<classes>
				<!-- 自定义规则类，填写类完整路径，类需继承com.ai.common.emport.rules.BaseRule -->
				<class>com.ai.common.emport.rules.MyRule</class>
			</classes>
		</rules>
	</field>
	<field>
		<title>联系电话</title>
		<fieldName>phone</fieldName>
		<fieldType>String</fieldType>
		<length>30</length>
		<rules>
			<mobile>true</mobile>
		</rules>
	</field>
	<field>
		<title>邮箱</title>
		<fieldName>email</fieldName>
		<fieldType>String</fieldType>
		<length>100</length>
		<rules>
			<required>false</required>
			<email>true</email>
		</rules>
	</field>
	<field>
		<title>创建时间</title>
		<fieldName>createTime</fieldName>
		<fieldType>Date</fieldType>
		<format>yyyy-MM-dd</format>
	</field>
	<field>
		<title>年龄</title>
		<fieldName>age</fieldName>
		<fieldType>Integer</fieldType>
		<rules>
			<digits>true</digits> 
			<min>0</min>
			<max>200</max>
		</rules>	
	</field>
	<field>
		<title>状态</title>
		<fieldName>userStatus</fieldName>
		<fieldType>String</fieldType>
		<rules>
			<!--字典参数type={itemKey:字典编码上传数据，itemValue:字典编码对应的值上传数据} -->
			<dict>		
			    <!-- 自定义字典规则验证
			    	需继承com.speedy.core.common.emport.rules.BaseDictRule
			    	默认使用com.speedy.core.common.emport.rules.DictRule，即无需定义class接口
			     -->
				<class>com.ai.common.emport.rules.DefineDictRule</class>		
				<key>USER_STATUS</key>
				<type>itemValue</type>
			</dict> 
		</rules>	
	</field>
	<field>
		<title>工资</title>
		<fieldName>salary</fieldName>
		<fieldType>Decimal</fieldType>
		<rules>
			<number>true</number> 
			<min>0</min>
		</rules>
	</field>	
</fields>	